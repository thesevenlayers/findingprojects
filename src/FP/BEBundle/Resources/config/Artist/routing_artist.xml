<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="fp.be.artist.get_list" pattern="/artist" methods="GET">
        <default key="_controller">FPBEBundle:Artist:getList</default>
   </route>

    <route id="fp.be.artist.get_new" pattern="/artist/new" methods="GET">
        <default key="_controller">FPBEBundle:Artist:getNew</default>
    </route>

    <route id="fp.be.artist.post_new" pattern="/artist/new" methods="POST">
        <default key="_controller">FPBEBundle:Artist:postNew</default>
    </route>

    <route id="fp.be.artist.get_edit" pattern="/artist/{id}/edit" methods="GET">
        <default key="_controller">FPBEBundle:Artist:getEdit</default>
    </route>

    <route id="fp.be.artist.post_edit" pattern="/artist/{id}/edit" methods="POST">
        <default key="_controller">FPBEBundle:Artist:postEdit</default>
    </route>

    <route id="fp.be.artist.delete" pattern="/artist/{id}/delete" methods="POST">
        <default key="_controller">FPBEBundle:Artist:postDelete</default>
    </route>

</routes>
