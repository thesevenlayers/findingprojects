{% extends "::base.html.twig" %}

{% block title %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        "bundles/fpbe/css/animate.css"
        "bundles/fpbe/css/themes/default.css"
        "bundles/fpbe/css/font-awesome.min.css"
        "bundles/fpbe/css/bootstrap-fileupload.css"
        "bundles/fpbe/css/bootstrap-switch-metro.css"
        "bundles/fpbe/css/pages/portfolio.css"
        "bundles/fpbe/css/style-metronic.css"
        "bundles/fpbe/css/style.css"
        "bundles/fpbe/css/style-responsive.css"
        "bundles/fpbe/css/plugins.css"
        "bundles/fpbe/js/plugins/fancybox/source/jquery.fancybox.css"
        "bundles/fpbe/js/plugins/Imgareaselect/css/imgareaselect-default.css"
        "bundles/fpbe/css/custom.css"
        filter="cssrewrite"
        output="css/final_layout.css"
    %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}">
    {% endstylesheets %}
    <style type="text/css">
        #banner_photo_btn {
            display: none;
        }
    </style>
    {#<link rel="stylesheet" type="text/css" href="{{ asset("bundles/fpbe/css/style-responsive.css") }}"/>#}


{% endblock %}

{% block body_class %}{{ "page-header-fixed" }}{% endblock %}

{% block body %}
    {% block header %}
        <div class="header navbar navbar-inverse navbar-fixed-top">
            <!-- BEGIN TOP NAVIGATION BAR -->
            <div class="header-inner">
                <!-- BEGIN LOGO -->
                <a class="navbar-brand logo" href="{{ path("fp.be.home.get_list") }}">
                    <img src="{{ asset("bundles/fpfe/img/logo.png") }}" alt="logo" class="img-responsive" />
                </a>
                <!-- END LOGO -->

                <!-- BEGIN TOP NAVIGATION MENU -->
                <ul class="nav navbar-nav pull-right">

                    <!-- BEGIN USER LOGIN DROPDOWN -->
                    <li class="dropdown user">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                            {#<img alt="" src="assets/img/avatar1_small.jpg"/>#}
                            {#<i class="fa fa-angle-down"></i>#}
                            <span class="username">{{ app.user }}</span>
                            <i class="fa fa-angle-down"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path("fos_user_profile_show") }}"><i class="fa fa-user"></i> My Profile</a>
                            </li>
                            <li class="divider"></li>
                            <li><a href="{{ path("fos_user_security_logout") }}"><i class="fa fa-key"></i> Log Out</a>
                            </li>
                        </ul>
                    </li>
                    <!-- END USER LOGIN DROPDOWN -->
                </ul>
                <!-- END TOP NAVIGATION MENU -->
            </div>

            <!-- END TOP NAVIGATION BAR -->
        </div>
    {% endblock %}
    {% block content %}
        {% block sidebar %}
            <div class="page-sidebar navbar-collapse collapse">
                <!-- BEGIN SIDEBAR MENU -->
                <ul class="page-sidebar-menu">
                    <li>
                        <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
                        <div class="sidebar-toggler hidden-phone"></div>
                        <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
                    </li>
                    <li class="start">
                        <a href="{{ url("fp.be.home.get_list") }}">
                            <i class="fa fa-home"></i>
                            <span class="title">Home</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{ url("fp.be.about.get_edit") }}">
                            <i class="fa fa-group"></i>
                            <span class="title">About</span>
                        </a>
                    </li>
                    <li class="">
                        <a href="{{ url("fp.be.project.get_list") }}">
                            <i class="fa fa-briefcase"></i>
                            <span class="title">Projects</span>
                        </a>
                    </li>
                    <li class="">
                        <a href="{{ url("fp.be.artist.get_list") }}">
                            <i class="fa fa-leaf"></i>
                            <span class="title">Artists</span>
                        </a>
                    </li>
                    <li class="">
                        <a href="{{ url("fp.be.newsletter.get_edit") }}">
                            <i class="fa fa-bell"></i>
                            <span class="title">Newsletter</span>
                            {{ render_esi(controller("FPBEBundle:Newsletter:getNewEmails")) }}


                        </a>

                    </li>
                    <li class="">
                        <a href="{{ url("fp.be.contact.get_edit") }}">
                            <i class="fa fa-envelope-o"></i>
                            <span class="title">Contacts</span>
                        </a>
                    </li>
                    <li class="">
                        <a href="{{ url("fp.be.sponser.get_list") }}">
                            <i class="fa fa-dollar"></i>
                            <span class="title">Sponsers</span>
                        </a>
                    </li>
                </ul>
                <!-- END SIDEBAR MENU -->
            </div>
        {% endblock %}
    {% endblock %}
    {% block footer %}
        <div class="footer">
            <div class="footer-inner">
                2014 &copy; <a href="http://thesevenlayers.net" style="color:#C5CB0D">TheSevenLayers</a>.
            </div>
            <div class="footer-tools">
			<span class="go-top">
			<i class="fa fa-angle-up"></i>
			</span>
            </div>
        </div>
    {% endblock %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
        "bundles/fpbe/js/plugins/respond.min.js"
        "bundles/fpbe/js/plugins/excanvas.min.js"
        "bundles/fpbe/js/plugins/bootstrap/js/bootstrap.min.js"
        "bundles/fpbe/js/plugins/bootstrap-hover-dropdown/twitter-bootstrap-hover-dropdown.min.js"
        "bundles/fpbe/js/plugins/jquery-slimscroll/jquery.slimscroll.min.js"
        "bundles/fpbe/js/plugins/jquery.blockui.min.js"
        "bundles/fpbe/js/plugins/jquery.cookie.min.js"
        "bundles/fpbe/js/plugins/uniform/jquery.uniform.min.js"
        "bundles/fpbe/js/plugins/fancybox/source/jquery.fancybox.pack.js"
        "bundles/fpbe/js/plugins/bootstrap-touchspin/bootstrap.touchspin.js"
        "bundles/fpbe/js/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js"
        "bundles/fpbe/js/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"
        "bundles/fpbe/js/plugins/jquery-inputmask/jquery.inputmask.bundle.min.js"
        "bundles/fpbe/js/plugins/jquery.input-ip-address-control-1.0.min.js"
        "bundles/fpbe/js/plugins/jquery-multi-select/js/jquery.multi-select.js"
        "bundles/fpbe/js/app.js"
        "bundles/fpbe/js/form-components.js"
        "bundles/fpbe/js/plugins/bootstrap-fileupload/bootstrap-fileupload.js"
        "bundles/fpbe/js/plugins/Imgareaselect/scripts/jquery.imgareaselect.min.js"
        "bundles/fpbe/js/plugins/bootstrap/js/bootstrap2-typeahead.min.js"
        output="js/final_js_layout.js"
    %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
    <script type="text/javascript">
//        $(".image_upload_btn").hide();
        jQuery(document).ready(function() {
            // initiate layout and plugins
            App.init();

//            FormComponents.init();
            $(".page-sidebar-menu a").each(function(){
                if(window.location.href.indexOf(this.href) != -1)
                {
                    $(this).parent().addClass("active");
                }
            })
        });
    </script>
{% endblock %}
